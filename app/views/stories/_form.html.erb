<%= render "layouts/errors", :object => @story %>
<%= form_for @story do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :image %>
  <%= image_tag(@story.image) %>
  <%= f.hidden_field :image, value: @story.image %>

  <%= f.submit %>
<% end %>
